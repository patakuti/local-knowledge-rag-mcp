# PostgreSQL Database Connection (Required)
# Used for storing vector embeddings
DATABASE_URL=postgresql://user:password@localhost:5432/local_knowledge_rag

# OpenAI API Key (when using OpenAI provider)
OPENAI_API_KEY=sk-your-openai-api-key-here
# Optional: Specify embedding model (default: text-embedding-3-small)
# EMBEDDING_MODEL=text-embedding-3-large

# Ollama Base URL (when using Ollama provider)
OLLAMA_BASE_URL=http://localhost:11434/v1
# Required for Ollama: Specify embedding model
EMBEDDING_MODEL=nomic-embed-text

# OpenAI-compatible API settings (for other providers like Azure OpenAI, local LLMs, etc.)
OPENAI_COMPATIBLE_API_KEY=your-api-key-here
OPENAI_COMPATIBLE_BASE_URL=https://your-endpoint.com/v1
# Optional: Specify embedding model for compatible API
# EMBEDDING_MODEL=your-embedding-model

# Workspace path (where your documents are located)
WORKSPACE_PATH=/path/to/your/knowledge/base
